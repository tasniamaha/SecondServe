<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="main-content" stylesheets="@hotelDashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.secondserve.HotelDonationreqController">

   <!-- Page Header -->
   <Label styleClass="content-title" text="Pending Donation Requests">
      <padding>
         <Insets bottom="10.0" />
      </padding>
   </Label>
   <Label styleClass="content-subtitle" text="Review and respond to requests from NGOs">
      <padding>
         <Insets bottom="10.0" />
      </padding>
   </Label>

   <!-- Scrollable Requests Container -->
   <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
      <VBox fx:id="requestsContainer" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <!-- Request cards created in the controller will be added here -->
         <Label styleClass="placeholder-text" text="Loading requests..." />
      </VBox>
   </ScrollPane>

</VBox>