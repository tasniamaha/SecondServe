<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" styleClass="root" stylesheets="@KitchenStyles.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.secondserve.KitchenMainController">

    <!-- TOP: Header Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header-bar">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <ImageView fx:id="logoImageView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
            <Label styleClass="app-title" text="Kitchen Interface">
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label styleClass="hotel-name" text="Grand Plaza Hotel" />
            <Button fx:id="logoutButton" onAction="#handleLogout" mnemonicParsing="false"
                    styleClass="logout-button" text="Log Out">
                <HBox.margin>
                    <Insets left="15.0" />
                </HBox.margin>
            </Button>
        </HBox>
    </top>

    <!-- LEFT: Sidebar Navigation -->
    <left>
        <VBox styleClass="sidebar">
            <padding>
                <Insets top="20.0" />
            </padding>
            <Button fx:id="logLeftoversButton" alignment="BASELINE_LEFT" graphicTextGap="15.0"
                    mnemonicParsing="false" styleClass="nav-button, active" text="Log Leftovers" />
        </VBox>
    </left>

    <!-- CENTER: Main Content Area -->
    <center>
        <VBox fx:id="logLeftoversView" styleClass="main-content">
            <padding>
                <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
            </padding>

            <!-- Page Title and Subtitle -->
            <Label styleClass="content-title" text="Log Leftover Food" />
            <Label styleClass="content-subtitle" text="Record leftover food items and ingredients from today's service">
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </Label>

            <!-- Form Container -->
            <VBox styleClass="form-container">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </padding>

                <!-- Food Item and Quantity Row -->
                <HBox spacing="20.0">
                    <VBox HBox.hgrow="ALWAYS" spacing="5.0">
                        <Label styleClass="input-label" text="Food Item" />
                        <TextField fx:id="foodItemField" promptText="e.g., Grilled Chicken" styleClass="text-field" />
                    </VBox>
                    <VBox prefWidth="200.0" spacing="5.0">
                        <Label styleClass="input-label" text="Quantity (kg)" />
                        <TextField fx:id="quantityField" promptText="0.0" styleClass="text-field" />
                    </VBox>
                </HBox>

                <!-- Category Selection -->
                <VBox spacing="5.0">
                    <Label styleClass="input-label" text="Category" />
                    <ComboBox fx:id="categoryComboBox" maxWidth="Infinity" promptText="Select category" styleClass="combo-box" />
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </VBox>

                <!-- Condition Selection -->
                <VBox spacing="5.0">
                    <Label styleClass="input-label" text="Condition" />
                    <ComboBox fx:id="conditionComboBox" maxWidth="Infinity" promptText="Select condition" styleClass="combo-box" />
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </VBox>

                <!-- Notes Section -->
                <VBox spacing="5.0">
                    <Label styleClass="input-label" text="Notes (Optional)" />
                    <TextArea fx:id="notesArea" prefRowCount="4" promptText="Additional notes about the item..."
                              styleClass="text-area" wrapText="true" />
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </VBox>

                <!-- Submit Button -->
                <Button fx:id="logLeftoverButton" onAction="#handleLogLeftoverItem" maxWidth="Infinity"
                        mnemonicParsing="false" styleClass="submit-button" text="Log Leftover Item">
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </Button>

                <!-- Today's Logged Items Section -->
                <Label styleClass="section-title" text="Today's Logged Items">
                    <VBox.margin>
                        <Insets bottom="10.0" top="40.0" />
                    </VBox.margin>
                </Label>

                <!-- Container for logged items -->
                <VBox fx:id="todaysItemsContainer" alignment="CENTER" styleClass="logged-items-container">
                    <Label fx:id="placeholderLabel" styleClass="placeholder-text" text="No items logged today." />
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>