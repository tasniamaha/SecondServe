<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<!--
    This view displays the details of a single hotel and its available food donations.
    It's intended to be loaded dynamically into the NGO Portal.
-->
<VBox styleClass="main-content" stylesheets="@NgoPortal.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.secondserve.HotelDonationViewController">
    <padding>
        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
    </padding>

    <!-- Header: Title and a 'Back' button for navigation -->
    <HBox alignment="CENTER_LEFT">
        <VBox>
            <Label styleClass="content-title" text="Available Donations" />
            <Label fx:id="hotelNameSubtitle" styleClass="content-subtitle" text="From [Hotel Name]" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleGoBack" styleClass="back-button" text="← Back to Hotel List" />
    </HBox>

    <!-- Card displaying the selected hotel's public information -->
    <VBox styleClass="hotel-details-card">
        <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
        </VBox.margin>
        <Label fx:id="hotelNameLabel" styleClass="hotel-name-title" text="Loading Hotel Name..." />
        <Label fx:id="hotelAddressLabel" styleClass="hotel-info-label" text="Loading address..." />
        <Label fx:id="hotelContactLabel" styleClass="hotel-info-label" text="Loading contact info..." />
    </VBox>

    <!-- Table of available food items from this hotel -->
    <Label styleClass="section-header" text="Food Items Available for Donation" />
    <TableView fx:id="foodItemsTableView" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="itemNameColumn" text="Item Name" prefWidth="250.0" />
            <TableColumn fx:id="quantityColumn" text="Available Quantity" prefWidth="150.0" />
            <TableColumn fx:id="conditionColumn" text="Condition" prefWidth="120.0" />
            <TableColumn fx:id="expiryDateColumn" text="Expires On" prefWidth="120.0" />
            <!-- The 'Request' button will go in this column -->
            <TableColumn fx:id="requestColumn" text="Action" prefWidth="150.0" style="-fx-alignment: CENTER;" />
        </columns>
        <placeholder>
            <Label styleClass="placeholder-text" text="This hotel has no available food items at this time." />
        </placeholder>
    </TableView>

</VBox>