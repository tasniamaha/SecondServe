<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<!-- Root changed to BorderPane for a better layout structure -->
<BorderPane prefHeight="720.0" prefWidth="1280.0" styleClass="root" stylesheets="@hotelDonationreq.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.secondserve.HotelDonationreqController">

   <!-- TOP: Header Bar -->
   <top>
      <HBox alignment="CENTER_LEFT" styleClass="header-bar">
         <Label styleClass="app-title" text="Hotel Management Dashboard" />
         <Region HBox.hgrow="ALWAYS" />
         <Label fx:id="hotelNameLabel" styleClass="user-name" text="The Grand Plaza Hotel" />
         <Button onAction="#handleLogout" styleClass="logout-button" text="Log Out" />
      </HBox>
   </top>

   <!-- LEFT: Sidebar Navigation -->
   <left>
      <VBox styleClass="sidebar">
         <Button fx:id="profileButton" onAction="#handleShowProfile" styleClass="nav-button" text="Hotel Profile" />
         <Button fx:id="requestsButton" onAction="#handleShowRequests" styleClass="nav-button, active" text="Donation Requests" />
      </VBox>
   </left>

   <!-- CENTER: Main Content Area -->
   <center>
      <VBox styleClass="main-content">
         <Label styleClass="content-title" text="Pending Donation Requests" />
         <Label styleClass="content-subtitle" text="Review and respond to new requests from NGOs" />

         <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
            <!-- This VBox will be populated with request cards by your controller -->
            <VBox fx:id="requestsContainer" spacing="10.0">
               <padding>
                  <Insets top="10.0" />
               </padding>
               <!-- ======================================================= -->
               <!-- ======= EXAMPLE OF A SINGLE REQUEST (TEMPLATE) ======== -->
               <!-- Your Java code will create one of these for each request -->
               <HBox styleClass="request-card">
                  <VBox>
                     <Label fx:id="ngoNameLabel" styleClass="ngo-name" text="The Helper's Hand" />
                     <Label fx:id="foodItemLabel" styleClass="food-item" text="Requested: 10.0 kg of Leftover Lasagna" />
                     <Label fx:id="dateLabel" styleClass="date" text="Received: 24 Aug, 2025 at 11:30 AM" />
                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox alignment="CENTER" spacing="10.0">
                     <Button onAction="#handleApprove" styleClass="approve-button" text="Approve" />
                     <Button onAction="#handleReject" styleClass="reject-button" text="Reject" />
                  </HBox>
               </HBox>
               <!-- ======================================================= -->
            </VBox>
         </ScrollPane>
      </VBox>
   </center>
</BorderPane>